    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chat",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/gradio",
            "args": [
                "src/salon/chat/main.py"
            ],
            "env": {
                "GRADIO_SERVER_NAME": "0.0.0.0"
            },
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Sound",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "src/salon/sound/main.py"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}